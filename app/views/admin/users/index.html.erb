<ol class="breadcrumb" itemscope itemtype="https://schema.org/BreadcrumbList">
  <li itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
    <%= link_to admin_path, temprop: "item" do %>
      <span itemprop="name">User List</span>
    <% end %>
    <meta itemprop="position" content="1" />
  </li>
</ol>

<div class="admin__user-headline">
  <div class="title__circle--h2"></div>
  <div class="admin__title">
    <h1 class='title__text'>User List</h1>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th class="table-optional-s">メールアドレス</th>
      <th></th>
      <th class="table-column-optional"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to admin_user_path(user), class: "admin__user-link" do %>
            <%= user.name %>
          <% end %>
        </td>
        <td class="table-optional-s"><%= user.email %></td>
        <% if user.is_deleted %>
          <td class="invalid-user">退会</td>
        <% else %>
          <td class="active-user">有効</td>
        <% end %>
        <td class="table-optional-m">
          <%= link_to admin_user_path(user), class: "btn-s-light" do %>
            詳細
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users %>