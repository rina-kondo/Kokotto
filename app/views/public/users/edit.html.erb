<section>
  <div class="title">
    <div class="title__circle--h2"></div>
    <h2 class='title__text'>User Infomatin</h3>
  </div>
  <%= form_with model: @user, url: update_user_path do |f| %>
    <div class="field">
      <%= f.label :name %>:
      <%= f.text_field :name %>
    </div>
    <div>
      email:
      <%= @user.email %>
    </div>

    <%= f.submit "更新", class: "btn-s-light" %>
  <% end %>

  <%= link_to "アカウント削除", withdrawal_path(current_user), method: :patch, data:{ confirm: "本当に消しますか？🥺"},  class: "btn-s-dark" %>

  <%= javascript_pack_tag 'notification-click.js' %>
</section>