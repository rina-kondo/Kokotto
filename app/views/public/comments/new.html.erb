
<%= form_with model: @comment, url: comments_path(params[:post_id]) do |f| %>
<div class="form">
  <div class="form__flame">
    <div class="form__content--comment">
      <%= f.text_field :text, autofocus: true, placeholder: "コメントしよう", class: "form__contentTextform" %>
      <div id="charCount" class="form__charCount--comment">0/100 文字</div>
      <div class="form__btn">
        <%= f.submit "コメントする", class: "btn" %>
      </div>
    </div>
  </div>
</div>
<% end %>

<%= javascript_pack_tag 'notification-click.js' %>
<%= javascript_pack_tag "char-counter.js" %>